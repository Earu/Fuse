<Window x:Class="Fuse.Windows.MoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fuse.Windows"
        mc:Ignorable="d"
		WindowStyle="None"
		WindowState="Normal"
		ResizeMode="NoResize"
		MouseLeave="OnMouseLeave"
        Height="300" Width="150">
	<Grid Background="#222222">
		<Border BorderBrush="#191919" BorderThickness="2" HorizontalAlignment="Left" Height="300" VerticalAlignment="Top" Width="150">
			
		</Border>
		<Button BorderBrush="Red" Foreground="White" Background="#f44141" Content="Block" Height="25" VerticalAlignment="Top" Margin="4,5,4,0"/>
		<Button BorderBrush="Red" Foreground="White" Background="#f44141" Content="Remove" Height="25" VerticalAlignment="Top" Margin="4,35,4,0"/>
		<Rectangle Fill="#191919" Stroke="#191919" VerticalAlignment="Top" Height="5" Margin="0,65,0,0"/>
		<Button BorderBrush="White" Foreground="Black" Background="LightGray" Content="Add Note" Height="24" VerticalAlignment="Top" Margin="2,73,2,0"/>
	</Grid>
</Window>
